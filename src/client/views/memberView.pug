doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    title Gestion de projets
    link(rel="stylesheet" href="https://use.typekit.net/gwy5biv.css" crossorigin="anonymous")
    link(href="https://fonts.googleapis.com/css?family=Open+Sans&display=swap" rel="stylesheet")
    link(href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet")
    link(rel="stylesheet" href="dist/bundle.css")
  body
    .big-nav.text-white
      include partials/header.pug
    .jumbotron.pb-0
      .container
        .row 
          .col
            .content
              include partials/shortcuts.pug
    .jumbotron
      .container
        .row
          .col-lg-12.px-4.py-1
            h4.mb-2
        .row.h-100.justify-content-center
          .col-lg-12.mb-2.p-4
            h3
              #member-name
            #member-infos.mt-3
            hr
        .row.mb-5
            .col-lg-12
                .bloc-stat#byProjectsMember
                    .lexique-title.mb-4 Projets associés
                    .form-group.border-0.mb-4
                        .row 
                            .col-lg-6
                                p Type
                                select#memberProjectsByType.form-control
                                    option(value="Projet") Projet
                                    option(value="Routine") Routine
                    //ul.list-group.list-group-flush#listProjectsMember
                    .row.mb-5
                        .col-lg-4#memberProjectsOpen
                            p.mb-4 Projets ouverts
                            ul.list-group.list-group-flush#listMemberProjectsOpen
                        .col-lg-4#memberProjectsWip
                            p.mb-4 En cours
                            ul.list-group.list-group-flush#listMemberProjectsWip
                        .col-lg-4#memberProjectsClosed
                            p.mb-4 Clôturés
                            ul.list-group.list-group-flush#listMemberProjectsClosed
                    button.button-round.mr-3.my-2#addMemberProject(data-toggle="modal" data-target="#panel-affect-member-project") + Affecter à un projet
                    button.button-round.mr-3.my-2#RemoveMemberProject(data-toggle="modal" data-target="#panel-remove-member-project") + Retirer d'un projet
        .row.mb-5
            .col-lg-12
                .bloc-stat#ticketsMember
                    .lexique-title.mb-4 Tickets
                    ul.list-group.list-group-flush#listTicketsMember
                    button.button-round.mr-3.my-2#addTicket(data-toggle="modal" data-target="#panel-add-ticket") + Créer un ticket
    include partials/modals.pug
    .footer
      include partials/footer.pug
    script(src="dist/bundle.js")