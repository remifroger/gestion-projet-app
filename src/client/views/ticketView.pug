    link(rel="stylesheet" href="dist/bundle.css")
  body
    .big-nav.text-white
      include partials/header.pug
    .jumbotron.pb-0
      .container
        .row 
          .col
            .content
              include partials/shortcuts.pug
    .jumbotron
      .container
        .row
          .col-lg-12.px-4.py-1
            h4.mb-2
        .row.h-100.justify-content-center
          .col-lg-12.mb-2.p-4
            small
                a.mb-3(href="/allTickets") Voir tous les tickets
            #ticket-name.lexique-title
            hr
        .row.mb-5
            .col-lg-12
                .bloc-stat#ticketView
                    ul.list-group.list-group-flush#ticketPanel
        .row.mb-5
            .col-lg-12
                .bloc-stat#comments
                    .lexique-title.mb-4 Commentaires
                    ul.list-group.list-group-flush#listComments
                    button.button-round.mr-3.my-2#addComment(data-toggle="modal" data-target="#panel-add-comment") + Ajouter un commentaire
    include partials/modals.pug
    .footer
      include partials/footer.pug
    script(src="dist/bundle.js")